generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  userName   String      @unique
  email      String      @unique
  password   String
  petprofile PetProfile?
}

model PetProfile {
  petId           Int     @id @default(autoincrement())
  petName         String
  species         String
  breed           String
  age             Int
  vaxxed          Boolean
  sprayedNeutered Boolean
  userId          Int     @unique
  user            User    @relation(fields: [userId], references: [id])
  //need to connect owner ID
  //profilePhoto
  //all other photos
}

model LocationInfo {
  locationId Int    @id @default(autoincrement())
  cityName   String
  state      String
  country    String
  //need to connect owner ID
}

